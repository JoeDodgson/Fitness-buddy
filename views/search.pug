doctype html
html(lang="en")
    head
        include head
        title Fitness Buddy | Search
    body
        include navbar
        button#favourites-button(onclick="document.location='/exercises'") Favourites
        #container-margin-nav
            form#signup-form.signup
                h2.page-title Search for an exercise
                br
                input#exercise-title-input(type="text" placeholder="Exercise Name")
                input#muscle-group-input(type="text" placeholder="Muscle Group")
                input#equipment-input(type="text" placeholder="Equipment")
                button#search-button-bottom(type="submit") Search
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(type="text/javascript" src= '/js/search.js')
    include footer